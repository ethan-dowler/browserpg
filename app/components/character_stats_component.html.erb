<div class="flex justify-around max-w-md mx-auto mb-4">
  <% TOP_ROW_STATS.each do |stat| %>
    <div class="
      w-24 mx-2 p-1
      border-2 border-black rounded-md
      flex flex-col items-center
      text-sm
    ">
      <div class="uppercase font-semibold hover:cursor-pointer">
        <%= stat %>
        <%# TODO: add tooltip with description of each stat %>
      </div>

      <div class="text-2xl">
        <%= character.send(stat) %>
      </div>
    </div>
  <% end %>
</div>

